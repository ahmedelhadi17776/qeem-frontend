# Qeem Frontend Environment Variables Template
# Copy this file to .env.local and update the values with your actual configuration

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# Development (local): http://localhost:8000
# Docker: http://backend:8000
# Production: https://api.qeem.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable React Query DevTools (development only)
# Set to true for debugging, false for performance
NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# Enable Performance Monitoring (development only)
# Set to true for debugging, false for performance
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# ANALYTICS (OPTIONAL)
# =============================================================================

# Google Analytics ID
# Get this from your Google Analytics dashboard
NEXT_PUBLIC_GA_ID=

# Hotjar ID for user behavior analytics
# Get this from your Hotjar dashboard
NEXT_PUBLIC_HOTJAR_ID=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_MARKET_INSIGHTS=true
NEXT_PUBLIC_ENABLE_INVOICE_MANAGEMENT=false
NEXT_PUBLIC_ENABLE_CONTRACT_MANAGEMENT=false

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================

# Sentry DSN for error tracking
# Get this from your Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# NEXT.JS OPTIMIZATION
# =============================================================================

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Skip authentication in development (for testing)
# Set to true to bypass authentication, false for normal flow
NEXT_PUBLIC_SKIP_AUTH=false

# Mock API responses for development
# Set to true to use mock data instead of real API calls
NEXT_PUBLIC_MOCK_API=false
